<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:id="@+id/main_linear_of_item"
    android:focusable="true"
    >
        <CheckBox
            android:id="@+id/checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/txt_nu"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />

        <TextView
            android:id="@+id/txt_ean11"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="الباركود"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:focusable="true"
            android:longClickable="true"
            android:scrollbars="vertical"
            />

        <TextView
            android:id="@+id/txt_short_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="وصف الصنف"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="الكميه"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:visibility="gone"
            />

        <!--android:textIsSelectable="true" -->
        <TextView
            android:id="@+id/txt_delivered_quantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="الكميه المستلمه"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <TextView
            android:id="@+id/txt_po_unite"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="وحده الصنف"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <TextView
            android:id="@+id/txt_material"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="كود الصنف"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />

        <TextView
            android:id="@+id/txt_vendor_nam"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="أسم البائع"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
    </LinearLayout>

