<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Promotion.MainPromotionActivity"
    android:background="@color/main_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        >

        <Button

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="عروض اليوم"
            android:background="@drawable/logn_btn"
            android:textColor="@color/third_white"
            android:onClick="TodayPromotion"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="العروض السارية"
            android:background="@drawable/logn_btn"
            android:textColor="@color/third_white"
            android:layout_marginTop="30dp"
            android:onClick="ActivePromotion"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="العروض المنتهية"
            android:background="@drawable/logn_btn"
            android:textColor="@color/third_white"
            android:layout_marginTop="30dp"
            android:onClick="ExpiredPromotion"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="العروض الموقوفة"
            android:background="@drawable/logn_btn"
            android:textColor="@color/third_white"
            android:layout_marginTop="30dp"
            android:onClick="StopedPromotion"/>



    </LinearLayout>
</ScrollView>