<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CycleCount.EditItemForCycleCountActivity"
android:layoutDirection="rtl"
android:background="@color/main_background_color"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    android:background="@color/main_background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="الياركود"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_for_text_of_app"
            />

        <TextView
            android:id="@+id/txt_barcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:text="Your Barcode"
            android:textColor="@color/third_white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="الوصف"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <TextView
            android:id="@+id/txt_descripation"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Description"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textColor="@color/third_white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="الكميه"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <EditText
            android:id="@+id/edit_qty"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:inputType="numberDecimal"
            android:textColorHint="@color/third_white"
            android:textColor="@color/third_white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="وحدة الصنف"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <TextView
            android:id="@+id/txt_unite_item"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Unite Item"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textColor="@color/third_white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="حفظ"
        android:background="@drawable/logn_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/third_white"
        android:layout_marginTop="50dp"
        android:onClick="SaveUpdatePDNEWQTY"
        android:textSize="@dimen/font_size_for_text_of_app"
        />


</LinearLayout>
</ScrollView>