<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    android:layoutDirection="ltr"

    >

        <CheckBox
            android:id="@+id/checkbox_item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txt_material_search"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="كود الصنف"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />

        <TextView
            android:id="@+id/txt_short_text_search"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="وصف الصنف"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <TextView
            android:id="@+id/txt_ean11_search"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="الباركود"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />
        <TextView
            android:id="@+id/txt_quantity_search"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="الكميه"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            />


    </LinearLayout>

