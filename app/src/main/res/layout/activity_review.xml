<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Promotion.ReviewActivity"
    android:layoutDirection="rtl"
    android:background="@color/main_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="رقم العرض"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_discoun_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="الرقم"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="الحالة"
                android:layout_marginStart="15dp"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="الحالة"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="الباركود"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_barcode"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="الباركود"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="10dp"
                >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="كود الصنف"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_article"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="كود الصنف"
                android:textColor="@color/third_white"
                android:maxLines="1"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="القسم"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/third_white"
                    />
                <TextView
                    android:id="@+id/txt_discountdepartment"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="قسم"
                    android:textColor="@color/third_white"
                    android:background="@drawable/txt_bg"
                    android:gravity="center_horizontal"
                    />
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="وصف الصنف"
            android:textColor="@color/third_white"
            />
        <TextView
            android:id="@+id/txt_des"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="كود الصنف"
            android:textColor="@color/third_white"
            android:background="@drawable/txt_bg"
            android:gravity="center_horizontal"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="سعر البيع"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_sellprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="كود الصنف"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="الضريبة"
                android:layout_marginStart="15dp"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_taxs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="الضريبة"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="قيمة الخصم"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_discountvalue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="قيمة الخصم"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="سعر البيع"
                android:layout_marginStart="15dp"
                android:textColor="@color/third_white"
                />
            <TextView
                android:id="@+id/txt_totalprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="سعر البيع"
                android:textColor="@color/third_white"
                android:background="@drawable/txt_bg"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملاحظات"
                android:textColor="@color/third_white"
                />
            <Spinner
                android:id="@+id/sp_notes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textDirection="ltr"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملاحظات أخرى"
                android:textColor="@color/third_white"
                />
            <EditText
                android:id="@+id/sp_another_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="ltr"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <Button
            android:layout_width="0dp"
                android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="رجوع"
                android:background="@drawable/logn_btn"
                android:textColor="@color/third_white"
                android:onClick="Back"/>

        <Button
            android:id="@+id/btn_ReviewDone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="تم المراجعة"
            android:background="@drawable/logn_btn"
            android:textColor="@color/third_white"
            android:layout_marginStart="20dp"
            android:onClick="ReviewDone"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>