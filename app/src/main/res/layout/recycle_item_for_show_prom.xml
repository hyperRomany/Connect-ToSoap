<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="ltr"

            >

            <CheckBox
                android:id="@+id/checkbox_item_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_consultative"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="مراجع"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_for_text_of_app"
                />

            <TextView
                android:id="@+id/txt_num_prom"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="رقم الخصم"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_for_text_of_app"
                />
            <TextView
                android:id="@+id/txt_type_prom"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="نوع الخصم"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_for_text_of_app"
                />
            <TextView
                android:id="@+id/txt_start_prom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="بداية الخصم"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_for_text_of_app"
                />
            <TextView
                android:id="@+id/txt_end_prom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="نهاية الخصم"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_for_text_of_app"
                />

        </LinearLayout>
</LinearLayout>